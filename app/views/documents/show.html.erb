<div class="uk-clearfix">
    <div class="uk-float-left">
        <article class="uk-article">
            <h1 class="uk-article-title"><%= @document.title %></h1>
            <p class="uk-article-meta">Uploaded by <%= link_to @document.user.pretty_name, @document.user %>, <%= time_ago_in_words(@document.updated_at)%></p>
            <p class="uk-article-lead"><%= @document.description %></p>
        </article>
    </div>
    <div class="uk-float-right">
        <div class="uk-button-group">
            <%= link_to download_document_path(@document), class: "uk-button uk-button-primary uk-button-large", target: :blank do %>
                <i class="uk-icon-cloud-download"></i> Download
            <% end %>
            <% if current_user_owns? @document %>
                <%= link_to edit_document_path(@document), class: "uk-button uk-button-large" do %>
                    <i class="uk-icon-pencil"></i> Edit
                <% end %>
                <%= link_to document_path(@document), class: "uk-button uk-button-large uk-button-danger", disabled: !current_user_owns?(@document), data: {confirm: 'You\'re about to remove a document from the whole repository. Do you want to continue?'}, method: :delete, action: :delete do %>
                    <i class="uk-icon-trash-o"></i> Delete
                    <% end %>
                <%= link_to upload_document_path(@document), class: "uk-button uk-button-large"  do %>
                    <i class="uk-icon-cloud-upload"></i> Update            
                <% end %>
            <% end %>
        </div>
    </div>
</div>

<hr />
<div class="uk-grid" data-uk-grid-margin="">
    <div class="uk-width-medium-2-3">
        <div class="uk-panel">
            Last updated: <%= @document.updated_at %> (<%= time_ago_in_words(@document.updated_at) %>) <br />
            Size: <%= number_to_human_size(@size) %>
            <hr />
            
        </div>
    </div>
    <div class="uk-width-medium-1-3">
        <div class="uk-panel uk-panel-box">
            <h3 class="uk-panel-title">Versioning</h3>
            <span class="uk-text-muted">This version of Galex has not support to versioning.</span>
        </div>
    </div>
</div>